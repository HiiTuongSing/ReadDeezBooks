<h2 class="page-title">Books</h2>

<form action="/books" method="get">
  <div class="form-row">
    <div class="form-item">
      <label>Title</label>
      <input
        class="form-input"
        type="text"
        name="title"
        value="<%= reqQuery.title %>"
      />
    </div>

    <div class="form-item">
      <label>Published Before</label>
      <input
        class="form-input"
        type="date"
        name="publishedBefore"
        value="<%= reqQuery.publishedBefore %>"
      />
    </div>

    <div class="form-item">
      <label>Published After</label>
      <input
        class="form-input"
        type="date"
        name="publishedAfter"
        value="<%= reqQuery.publishedAfter %>"
      />
    </div>
  </div>
  <div class="btn-row form-row form-row-end">
    <a class="btn btn-danger" href="/books">Clear</a>
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>

<div class="book-grid">
  <% books.forEach( book => { %>
  <div class="book-display-container">
    <a href="/books/<%= book.id %>">
      <img src="<%= book.coverImagePath %>" />
      <h2><%= book.title %></h2>
    </a>
  </div>
  <% }) %>
</div>
